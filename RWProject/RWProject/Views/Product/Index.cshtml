    <table class="table table-striped table-bordered table-hover" id="tableproducts">
        <thead>
            <tr>               
                <th>
                    Code
                </th>
                <th>
                    Product
                </th>
                <th>
                    Category
                </th>
                <th>
                    Subcategory
                </th>
                <th>
                    Model
                </th>
                <th>
                    Price
                </th>
                <th>
                    Colour
                </th>
                <th>
                    Size
                </th>
                <th>
                    Description
                </th>
                <th>
                    Actions
                </th>
            </tr>            
        </thead>
        <tfoot style="display:table-header-group!important">
            <tr>
                <th>
